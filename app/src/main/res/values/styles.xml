<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:actionBarTabStyle">@style/AppTheme.ActionBar.Tab</item>
        <item name="actionBarTabStyle">@style/AppTheme.ActionBar.Tab</item>

        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Widget.AppCompat.Button" parent="Widget.AppCompat.Button">
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/MfrpActionBar</item>
        <item name="actionBarStyle">@style/MfrpActionBar</item>
    </style>

    <style name="MfrpActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Table.Text.Bold" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.ActionBar.Tab" parent="@style/Widget.AppCompat.ActionBar.TabBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
